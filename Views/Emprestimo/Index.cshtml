@model IEnumerable<EmprestimosModel>

<div class="container">
    <div class="d-flex justify-content-between align-items-center mb-5">
        <h1>Empréstimos</h1>

        <div>
            <a class="btn btn-success px-4" asp-controller="Emprestimo" asp-action="Exportar"><i class="bi bi-file-earmark-plus me-2"></i>Exportar</a>

            <a class="btn btn-success mx-2" asp-controller="Emprestimo" asp-action="Cadastrar"><i class="bi bi-file-earmark-plus me-2"></i>Cadastrar novo empréstimo</a>
        </div>
    </div>



    @if(TempData["MensagemSucesso"] != null)
    {
        <div class="alert alert-success d-flex align-items-center" role="alert">
            @TempData["MensagemSucesso"]
        </div>
    }

    <table id="Emprestimos" class="table table-light table-hover mt-2 text-center">
        <thead>
            <tr>
                <th scope="col">Recebedor</th>
                <th scope="col">Fornecedor</th>
                <th scope="col">Livro</th>
                <th scope="col">Data Empréstimo</th>
                <th></th>
            </tr>
        </thead>

        <tbody>
            @if(Model != null)
            {
                @foreach (var registro in Model)
                {
                    <tr>
                        <th scope="row">@registro.Recebedor</th>
                        <td>@registro.Fornecedor</td>
                        <td>@registro.LivroEmprestado</td>
                        <td>@registro.DataUltimaAtualizacao</td>
                        <td>
                            <a asp-controller="Emprestimo" asp-action="Editar" asp-route-id="@registro.Id" class="btn btn-warning mx-2 px-4"><i class="bi bi-pencil-square me-2"></i>Editar</a>
                            <a asp-controller="Emprestimo" asp-action="Excluir" asp-route-id="@registro.Id" class="btn btn-danger mx-2 px-4"><i class="bi bi-trash3-fill me-2"></i>Excluir</a>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>